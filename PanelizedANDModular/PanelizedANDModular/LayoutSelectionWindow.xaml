<Window x:Class="PanelizedAndModularFinal.LayoutSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Layout" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Scrollable list of layout previews -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <ListBox x:Name="LayoutsListBox" 
                     ItemsSource="{Binding LayoutPreviews}" 
                     SelectedItem="{Binding SelectedLayout, Mode=TwoWay}"
                     BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="1" Margin="5">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" 
                                           FontWeight="Bold" 
                                           HorizontalAlignment="Center" 
                                           Margin="5"/>
                                <ContentControl Margin="5">
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <Image Source="{Binding Thumbnail}" 
                                                           Height="150" 
                                                           Stretch="Uniform"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Thumbnail}" Value="{x:Null}">
                                                    <Setter Property="Content">
                                                        <Setter.Value>
                                                            <TextBlock Text="No Preview" 
                                                                       HorizontalAlignment="Center" 
                                                                       VerticalAlignment="Center" 
                                                                       Height="150" 
                                                                       FontStyle="Italic"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

        <!-- OK and Cancel buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="OK" Width="80" Margin="5" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
