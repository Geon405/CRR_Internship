<Window x:Class="PanelizedAndModularFinal.ModuleCombinationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Module Combinations" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Area Info row -->
            <RowDefinition Height="*"/>
            <!-- ListBox row -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons row -->
        </Grid.RowDefinitions>
        <Label x:Name="lblAreaInfo" Grid.Row="0" Content="Minimum Area: 0 ft², Maximum Area: 0 ft²" Margin="0,0,0,10"/>
        <ListBox x:Name="lbCombinations" Grid.Row="1" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Select" Click="btnSelect_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
