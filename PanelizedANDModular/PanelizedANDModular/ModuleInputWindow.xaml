<Window x:Class="PanelizedAndModularFinal.ModuleInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Module Input" Height="200" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <Label Content="Minimum Width (X) ft:"/>
            <TextBox Name="txtMinWidth" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,0,0,10">
            <Label Content="Maximum Length (H) ft:"/>
            <TextBox Name="txtMaxHeight" Width="200"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button Name="btnOk" Content="OK" Width="75" Margin="5" Click="btnOk_Click"/>
            <Button Name="btnCancel" Content="Cancel" Width="75" Margin="5" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
